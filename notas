from django.db import models

class Categoria(models.Model):
    nome = models.CharField(max_length=100)
    
    def __str__(self):
        return self.nome

class Produto(models.Model):
    nome = models.CharField(max_length=100)
    descricao = models.TextField()
    preco_p = models.DecimalField(max_digits=10, decimal_places=2, null=True, blank=True)
    preco_m = models.DecimalField(max_digits=10, decimal_places=2, null=True, blank=True)
    preco_g = models.DecimalField(max_digits=10, decimal_places=2, null=True, blank=True)
    categoria = models.ForeignKey(Categoria, related_name='produtos', on_delete=models.CASCADE)

    def __str__(self):
        return self.nome











